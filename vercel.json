{
  "version": 2,
  "builds": [
    {
      "src": "vercel_handler.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "150mb",
        "includeFiles": [
          "staticfiles/**",
          "portfolioapp/static/**",
          "portfolio/**",
          "db.sqlite3"  // Only if using SQLite locally
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      },
      "continue": true
    },
    {
      "src": "/(.*)",
      "dest": "vercel_handler.py"
    }
  ],
  "rewrites": [
    {
      "source": "/static/(.*)",
      "destination": "/static/$1"
    }
  ]
}
